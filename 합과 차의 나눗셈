import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Your Program Goes Here
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int b = sc.nextInt();
        double k = (double)(a+b)/(a-b);


        System.out.printf("%.2f",k);
    }
}
